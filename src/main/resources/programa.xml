<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="programa" namespace="/programa" extends="gch">
        
        <default-interceptor-ref name="autenticadorStack" />  
        
        <action name="listar" class="pe.edu.cibertec.gch.programa.action.ListarAction" >
            <result type="tiles">gch.programa.listar</result>          
        </action>
        
        <action name="nuevo" class="pe.edu.cibertec.gch.programa.action.RegistrarAction" method="inicializar" >
            <interceptor-ref name="autenticadorStack">
                <param name="validation.excludeMethods">inicializar</param>
            </interceptor-ref>
            <result type="tiles">gch.programa.nuevo</result>
        </action>
        
        <action name="registrar" class="pe.edu.cibertec.gch.programa.action.RegistrarAction" >

            <!-- *********************************************************************************
            * Redireccionamos a listarProgramas mediante redirect (no recomendado) 
            * <result name="success" type="redirect" >listarProgramas.html?mensaje=${mensaje}</result>
            ***************************************************************************************-->
            
            <!-- Redireccionamos a listarProgramas mediante redirectAction ( recomendado )-->
            <result name="success" type="redirectAction" >
                <param name="actionName">listar</param>
                <param name="namespace">/programa</param>
                <param name="mensaje">${mensaje}</param>
            </result>
            <result name="input" type="tiles">gch.programa.nuevo</result>
        </action>
        
        <action name="editar" class="pe.edu.cibertec.gch.programa.action.EditarAction" method="mostrar" >
            <interceptor-ref name="autenticadorStack">
                <param name="validation.excludeMethods">mostrar</param>
            </interceptor-ref>
            <result type="tiles">gch.programa.editar</result>
            <result name="listado" type="redirectAction">
                <param name="actionName">listar</param>
                <param name="mensaje">${mensaje}</param>
            </result>
        </action>
        
        <action name="guardar" class="pe.edu.cibertec.gch.programa.action.EditarAction" >
            <result name="success" type="redirectAction" >
                <param name="actionName">listar</param>
                <param name="namespace">/programa</param>
                <param name="mensaje">${mensaje}</param>
            </result>
            <result name="input" type="tiles">gch.programa.editar</result>
        </action>
        
        <action name="eliminar" class="pe.edu.cibertec.gch.programa.action.EliminarAction" >
            <!--Redireccionamos a listarProgramas mediante 'chain' --> 
            <result name="success" type="chain">listar</result>
        </action>
        
        <action name="buscar" class="pe.edu.cibertec.gch.programa.action.BuscarAction" >
            <!--se hace uso del interceptor validation ver el archivo : Buscar-validation.xml --> 
            <result type="tiles">gch.programa.listar</result>
            <result name="input" type="tiles">gch.programa.listar</result>
        </action>
    </package>
</struts>

