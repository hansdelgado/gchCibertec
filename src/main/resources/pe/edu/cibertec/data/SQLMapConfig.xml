<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration 
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
 
    <properties resource="pe/edu/cibertec/data/configuration.properties"/>

    <typeAliases>
        <typeAlias alias="Profesor" type="pe.edu.cibertec.gch.modelo.Profesor"/>
         <typeAlias alias="Laboratorio" type="pe.edu.cibertec.gch.modelo.Laboratorio"/>
    </typeAliases>
    
    <environments default="jmad">
        <environment id="jmad">
            <transactionManager type="JDBC"/>
            <dataSource type="UNPOOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>   
        </environment>
    </environments>
    

    
    <mappers>       
        <mapper resource="pe/edu/cibertec/data/ProfesorMapper.xml"/> 
         <mapper resource="pe/edu/cibertec/data/LaboratorioMapper.xml"/> 
    </mappers>

</configuration>
