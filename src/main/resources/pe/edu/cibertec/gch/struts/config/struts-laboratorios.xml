<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="laboratorios" extends="gch">
        <action name="listaBaseLaboratorio"
                class="mostrarLaboratorioAction"
                method="listar">
            <result name="listaBase">/view/laboratorio/index.jsp</result>
        </action>
        <action name="buscarLaboratorio"
                class="mostrarLaboratorioAction"
                method="buscar">
            <result name="success">/view/laboratorio/index.jsp</result>
        </action>
        <action name="registrarLaboratorio"
                class="gestionLaboratorioAction"
                method="registrar">
            <result name="success">/view/laboratorio/index.jsp</result>
            <result type="redirect">listaBaseLaboratorio</result>
        </action>
        <action name="actualizarLaboratorio"
                class="gestionLaboratorioAction"
                method="actualizar">
            <result name="success">/view/laboratorio/index.jsp</result>
            <result type="redirect">listaBaseLaboratorio</result>
        </action>
        <action name="eliminarLaboratorio"
                class="gestionLaboratorioAction"
                method="eliminar">
            <result name="success">/view/laboratorio/index.jsp</result>
            <result type="redirect">listaBaseLaboratorio</result>
        </action>
        <action name="irEdicionLaboratorio"
                class="edicionLaboratorioAction">
            <result>/view/laboratorio/actualiza.jsp</result>
            <result name="input" type="redirect">listarLaboratorio</result>
        </action>
         <action name="irRegistroLaboratorio">
            <result>/view/laboratorio/registro.jsp</result>
        </action>
    </package>
</struts>